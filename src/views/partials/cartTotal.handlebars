                    <tr>
                        <td><span class="cart__total-title">Envío</span></td>
                        <td><span class="cart__total-price" id="shipping">$0</span></td>
                    </tr>
                    <tr>
                        <td><span class="cart__total-title">Total</span></td>
                        <td><span class="cart__total-price" id="total">$0</span></td>
                    </tr>
                </tbody>
            </table>
            <button class="btn flex btn--md" id="payment" aria-label="Realizar pedido">Realizar pedido</button>
        </div>
    </div>
</section>
