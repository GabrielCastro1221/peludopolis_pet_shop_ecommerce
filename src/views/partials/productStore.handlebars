<link rel="stylesheet" href="/css/share.css">

{{#each productos}}
<div class="product__item">
    <div class="product__banner">
        <a href="/tienda/{{_id}}" class="product__images">
            <img src="{{image}}" alt="{{title}}" class="product__img default">
            <img src="{{image}}" alt="{{title}}" class="product__img hover">
        </a>

        <div class="product__actions">
            <a href="/tienda/{{_id}}" class="action__btn" aria-label="Detalle del producto">
                <i class="fi fi-rr-eye"></i>
            </a>
            <a href="#" class="action__btn share__btn" aria-label="Compartir" data-id="{{_id}}" data-title="{{title}}"
                data-image="{{image}}">
                <i class="fi fi-rr-share"></i>
            </a>
        </div>

        <div class="product__badge light-pink">
            {{type_product}}
        </div>
    </div>

    <div class="product__content">
        <span class="product__category">{{category}}</span>
        <a href="/tienda/{{_id}}">
            <h3 class="product__title">{{title}}</h3>
        </a>

        <div class="product__price flex">
            <span class="new__price">$ {{price}}</span>
        </div>

        <form class="add-to-cart-form" data-product-id="{{_id}}">
            <button type="submit" class="action__btn cart__btn" aria-label="AÃ±adir al carrito">
                <i class="fi fi-rr-shopping-cart"></i>
            </button>
        </form>
    </div>
</div>
{{/each}}

<script src="/js/share.js"></script>