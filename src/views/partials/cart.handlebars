<div class="table__container">
    <table class="table">
        <tr>
            <th>Imagen</th>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Cantidad</th>
            <th>Quitar</th>
        </tr>

        {{#each cart.products}}
        <tr>
            <td>
                <img src="{{this.product.image}}" alt="{{this.product.title}}" class="table__img">
            </td>
            <td>
                <h3 class="table__title">{{this.product.title}}</h3>
                <p class="table__description">{{this.product.description}}</p>
            </td>
            <td>
                <span class="table__price">${{this.product.price}}</span>
            </td>
            <td>
                <input type="number" class="quantity" value="{{this.quantity}}">
            </td>
            <td>
                <button class="btn btn--sm btn--delete" data-product-id="{{this.product._id}}">
                    <i class="fi fi-rr-trash"></i>
                </button>
            </td>
        </tr>
        {{/each}}
    </table>
</div>

<div class="cart__actions">
    <a href="#" class="btn flex btn--md btn--empty-cart">
        <i class="fi fi-rr-trash"></i> Vaciar carrito
    </a>

    <a href="/tienda" class="btn flex btn--md">
        <i class="fi fi-rr-basket-shopping-simple"></i> Continuar comprando
    </a>
</div>

<div class="divider">
    <i class="fi fi-rr-fingerprint"></i>
</div>

<div class="cart__group grid">
    <div>
        <div class="cart__shipping">
            <h3 class="section__title">Calcular env√≠o</h3>
            <form class="form grid">
                <input type="text" name="state_country" placeholder="state / country" class="form__input">
                <div class="form__group grid">
                    <input type="text" name="city" placeholder="city" class="form__input">
                    <input type="text" name="postcode_zip" placeholder="postCode / ZIP" class="form__input">
                </div>
                <div class="form__btn">
                    <button class="btn flex btn--sm">
                        <i class="fi fi-rr-shuffle"></i> Actualizar
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="cart__total">
        <h3 class="section__title">Total Compra</h3>
        <table class="cart__total-table">
            <tr>
                <td><span class="cart__total-title">Subtotal</span></td>
                <td><span class="cart__total-price">$442542524</span></td>
            </tr>
            <tr>
                <td><span class="cart__total-title">Shipping</span></td>
                <td><span class="cart__total-price">$24354</span></td>
            </tr>
            <tr>
                <td><span class="cart__total-title">Total</span></td>
                <td><span class="cart__total-price">$45454</span></td>
            </tr>
        </table>
        <a href="/payment-methods" class="btn flex btn--md">Continuar con la compra</a>
    </div>
</div>