<link rel="stylesheet" href="/css/nav.css" />

<header class="header" aria-labelledby="header-title">
    <div class="header__top">
        <div class="header__container container">
            <div class="header__contact">
                <span aria-label="Número de contacto">(+57) 314 638 1395</span>
                <span aria-label="Ubicación física de la tienda">Nuestra ubicación</span>
            </div>
            <p class="header__alert-news">
                Ofertas de gran valor, ahorre más con cupones
            </p>
            <div>
                <a href="/login" class="header__top-action" id="login-top-link" aria-label="Iniciar sesión o registrarse">
                    Ingresa / Regístrate
                </a>
                <a href="/perfil-usuario" class="header__top-action" id="user-top-link" style="display: none;" aria-label="Acceder a mi cuenta de usuario">
                    Mi cuenta
                </a>
                <a href="/perfil-admin" class="header__top-action" id="admin-top-link" style="display: none;" aria-label="Acceder a la cuenta de administrador">
                    Mi cuenta Admin
                </a>
            </div>
        </div>
    </div>

    <nav class="nav container" aria-label="Menú de navegación principal">
        <a href="/" class="nav__logo" aria-label="Ir a la página de inicio">
            <img src="/assets/img/logo.png" alt="Logo de Pet Shop" class="nav__logo-img" />
        </a>

        <div class="nav__menu" id="nav-menu">
            <div class="nav__menu-top">
                <a href="/" class="nav__menu-logo" aria-label="Ir a la página de inicio">
                    <img src="/assets/img/logo.png" alt="Logo de Pet Shop" />
                </a>
                <button class="nav__close" id="nav-close" aria-label="Cerrar menú de navegación">
                    <i class="fi fi-rr-cross-small"></i>
                </button>
            </div>
            <ul class="nav__list">
                <li class="nav__item">
                    <a href="/" class="nav__link active-link" aria-label="Ir a la página de inicio">Inicio</a>
                </li>
                <li class="nav__item">
                    <a href="/tienda" class="nav__link" aria-label="Explorar productos en la tienda">Tienda</a>
                </li>
                <li class="nav__item">
                    <a href="/perfil-admin" class="nav__link" id="admin-nav-link" style="display: none;" aria-label="Acceder a cuenta de administrador">Mi cuenta</a>
                </li>
                <li class="nav__item">
                    <a href="/perfil-usuario" class="nav__link" id="user-nav-link" style="display: none;" aria-label="Acceder a mi cuenta">Mi cuenta</a>
                </li>
                <li class="nav__item">
                    <a href="/login" class="nav__link" id="login-nav-link" aria-label="Iniciar sesión">Login</a>
                </li>
            </ul>

            <div class="header__search">
                <input type="text" id="search-input" placeholder="Buscar productos" class="form__input" aria-label="Buscar productos en Pet Shop" />
                <button class="search__btn" aria-label="Buscar">
                    <img src="/assets/img/search.png" alt="Botón de búsqueda" />
                </button>
            </div>
        </div>

        <div class="header__user-actions">
            <a href="/cart/1" class="header__action-btn cartId" aria-label="Ver carrito de compras">
                <img src="/assets/img/icon-cart.svg" alt="Carrito de compras" title="Carrito de compras" />
            </a>
            <button class="header__action-btn nav__toggle" id="nav-toggle" aria-label="Abrir menú de navegación">
                <img src="/assets/img/menu-burger.svg" alt="Icono de menú de navegación" />
            </button>
        </div>
    </nav>
</header>

<script src="/js/nav/nav.js"></script>
<script src="/js/nav/navButtons.js"></script>
